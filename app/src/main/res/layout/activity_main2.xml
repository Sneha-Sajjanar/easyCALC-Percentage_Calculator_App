<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/c2"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/ubuntu"
        android:background="@drawable/back"
        android:gravity="center_horizontal"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:text="Scored Marks"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scored_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/adobegothicstdbold"
        android:gravity="center_horizontal"
        android:text="-"
        android:ems="10"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:background="@drawable/custom_edit_text"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu"
        android:gravity="center_horizontal"
        android:text="Maximum Marks"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:background="@drawable/back"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        />

    <EditText
        android:id="@+id/max_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center_horizontal"
        android:hint="Marks"
        android:textSize="18dp"
        android:ems="10"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:background="@drawable/custom_edit_text"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="3"
        android:textAlignment="center"
        tools:ignore="HardcodedText"
        android:layout_marginTop="250dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adobegothicstdbold"
        android:text="----"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="370dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/ubuntu"
        android:onClick="percent"
        android:text="Get Percent %"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FROM"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="@font/adobegothicstdbold"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_marginTop="740dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SNEHA SAJJANAR"
        android:textSize="14dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="@font/adobegothicstdbold"
        android:textColor="#fff"
        android:layout_marginTop="760dp"/>

</RelativeLayout>